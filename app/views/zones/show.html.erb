<p id="notice"><%= notice %></p>

<div>
<%= link_to 'Edit', edit_zone_path(@zone) %> |
<%= link_to 'Back', zones_path %>
</div>

<p>
  <b>Zone name:</b>
  <%= @zone.zone_name %>
</p>



<table class="table">
  <tr>
    <th>Room name</th>
    <th>Zone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  

<% @zone.rooms.each do |room| %>
  <tr>
    <td><%= room.room_name %></td>
    <td><%= room.zone_id %></td>
    <td><%= link_to 'Show', "/zones/#{@zone.id}/rooms/#{room.id}" %></td>
    <td><%= link_to 'Edit', "/zones/#{@zone.id}/rooms/#{room.id}/edit" %></td>
    <td><%= link_to 'Destroy', "/zones/#{@zone.id}/rooms/#{room.id}", confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Room', "/zones/#{@zone.id}/rooms/new" %>





