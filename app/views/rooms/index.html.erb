<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Room name</th>
    <th>Zone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.room_name %></td>
    <td><%= room.zone_id %></td>
    <td><%= link_to 'Show', "/zones/#{@zone.id}/rooms/#{room.id}" %></td>
    <td><%= link_to 'Edit', "/zones/#{@zone.id}/rooms/#{room.id}/edit" %></td>
    <td><%= link_to 'Destroy', "/zones/#{@zone.id}/rooms/#{room.id}", confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

